#include <stdio.h>

int main() {

    int n;

    printf("Enter the number of terms: ");

    scanf("%d", &n);

    

    int sum = 0;

    int num;

    for (int i = 1; i <= n; i++) {

        printf("Enter number %d: ", i);

        scanf("%d", &num);

        sum += num;

    }

    

    float avg = (float) sum / n;

    

    printf("The sum of the %d numbers is %d\n", n, sum);

    printf("The average of the %d numbers is %.2f\n", n, avg);

    

    return 0;

}
