#include <stdio.h>

int main() {

    int n, sum = 0;

    printf("Enter a positive integer n: ");

    scanf("%d", &n);

    

    for (int i = 1; i <= n; i++) {

        if (i % 2 == 0) {

            sum =sum + i;

        } else {

            sum = sum + i;

        }

    }

    

    printf("The sum of the series is %d", n, sum);

    

    return 0;

}
