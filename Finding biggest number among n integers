#include <stdio.h>

int main() {

   int n, i;

   int arr[100];

   printf("Enter the number of integers: ");

   scanf("%d", &n);

   printf("Enter %d integers: ", n);

   for(i = 0; i < n; i++) {

      scanf("%d", &arr[i]);

   }

   int max = arr[0];

   for(i = 1; i < n; i++) {

      if(arr[i] > max) {

         max = arr[i];

      }

   }

   printf("The largest element is %d", max);

   return 0;

}
